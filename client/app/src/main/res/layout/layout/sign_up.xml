<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_page"
    android:background="@drawable/sign_drawable"
    tools:context=".loginActivity">


    <LinearLayout
        android:layout_marginTop="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/sign_up1"
        >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:textColor="#affaaf"
                android:textSize="30sp"
                android:text="注册手机号码"

                android:id="@+id/loginTips1"

                />
        <LinearLayout
            android:id="@+id/input_layout_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="20dip"
            android:background="#f8d8a8"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/userNameInput1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="@string/userName"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="11"
                android:imeOptions="actionDone"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageButton

            android:id="@+id/main_btn_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#00000000"
            android:src="@drawable/login"
            android:visibility="invisible"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/sign_up2"
        android:visibility="gone"
        >

        <com.tuo.customview.VerificationCodeView
            android:id="@+id/icv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="26dp"
            app:icv_et_number="4"
            app:icv_et_pwd="false"
            app:icv_et_pwd_radius="10dp"
            app:icv_et_text_color="#9eacf1"
            app:icv_et_width="50dp"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/sign_up3"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:textColor="#affaaf"
            android:textSize="30sp"
            android:text="注册手机号码"

            android:id="@+id/loginTips2"

            />
        <LinearLayout
            android:id="@+id/input_layout_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="20dip"
            android:background="#f8d8a8"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/code" />

            <EditText
                android:id="@+id/userNameInput2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint="@string/code"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:imeOptions="actionDone"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageButton

            android:id="@+id/main_btn_login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#00000000"
            android:src="@drawable/login"
            android:visibility="invisible"
            />
    </LinearLayout>



</RelativeLayout>